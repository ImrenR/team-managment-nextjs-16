generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Altı çizilecek ama sorun değil
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  password  String
  name      String
  role      Role    @default(USER)
  teamId    String?
  Team      Team?   @relation(fields: [teamId], references: [id], onDelete: SetNull)

  // Timestamps
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  // Indexes
  @@index([email])
  @@index([role])
  @@index([teamId])

  // Map
  @@map("users")
}

model Team {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  code        String  @unique
  members     User[]

  // Timestamps
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  // Map
  @@map("teams")
}

enum Role {
  ADMIN
  MANAGER
  USER
  GUEST
}
